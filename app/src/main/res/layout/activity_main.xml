<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контент калькулятора -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Экран с цифрами -->
        <EditText
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginBottom="20dp"
            android:background="@color/display_background"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/text_primary"
            android:textSize="70sp" />

        <!-- Пустое пространство -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Таблица для кнопок -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5">

            <!-- Первый ряд -->
            <Button
                android:id="@+id/button_clear"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_clear"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_divide"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_operation"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_multiply"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_operation"
                android:text="×"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_del"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#546E7A"
                android:text="⌫"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- Второй ряд -->
            <Button
                android:id="@+id/button_7"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_8"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_9"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_minus"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_operation"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- Третий ряд -->
            <Button
                android:id="@+id/button_4"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_5"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_6"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_plus"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_operation"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- Четвертый ряд -->
            <Button
                android:id="@+id/button_1"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_2"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_3"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_equals"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_rowSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_equals"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- 5 ряд -->
            <Button
                android:id="@+id/button_0"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_dot"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/button_number"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </GridLayout>
    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background_dark"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>