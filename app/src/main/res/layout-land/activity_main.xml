<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контент калькулятора -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_dark">

        <!-- Левая часть - дисплей -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/display_background"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="end"
                android:padding="16dp"
                android:text="0"
                android:textColor="@color/text_primary"
                android:textSize="50sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/surface_dark"
                android:padding="16dp"
                android:text="История:"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Правая часть - кнопки -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_clear"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_operation"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_operation"
                android:text="×"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#546E7A"
                android:text="⌫"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_operation"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_operation"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_equals"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/button_number"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/CalculatorButton" />
        </GridLayout>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
